<div class ="container">
  <div class ="row">
    <h5 class="my-5">
      <span class ="p-2" style="background-color: #eee;">
        注文履歴一覧
      </span>
    </h5>
  </div>
  <div class ="row">
    <div class = "col">
      <table class ="table">
        <thead>
            <tr class ="p-2" style="background-color: #eee;">
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= link_to admin_order_path(order) do %>
                  <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
                <% end %>
                </td>
                
                <td><%= order.name %></td>
                <td>
                  <%#= 数量 %>
                  <%= order.get_total_amount %>
                </td>
                <td><%#= 注文ステータス %><%= order.status_i18n %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
