<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
    <h4>
      <span class=" p-2" style="background-color: #eee;">ジャンル一覧・追加</span>
    </h4>
    </div>
  </div>
      <div class="row">
      <div class="col">
       <!--ジャンル新規登録のフォーム-->
<%= form_with model: @genre, url: "/admin/genres", method: :post, local: true do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name, placeholder:"ジャンル名" %>
  <%= f.submit "新規登録", class:"btn btn-success ml-4 py-1" %>
  <% end %>
      </div>
    </div>
    
      <!--ジャンル一覧-->
          <div class="row">
      <div class="col-lg-5 mt-3">

<table class="table table-bordered">
 <thead class="table-secondary">
   <tr>
    <th>ジャンル</th>
     <th colspan="1"></th>
      </tr>
  </thead>
   <tbody>
    <% @genres.each do |genre| %>
     <tr>
      <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success py-0" %></td>
          </tr>
          <% end %>
    </tbody>
 </table>
     </div>
    </div>
  </div>
</div>