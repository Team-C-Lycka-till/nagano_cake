<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col mb-5">
      <h5><span class=" p-2" style="background-color: #eee;">ジャンル編集</span></h5>
    </div>
 </div>

  <div class="row">
    <div class="col">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch, local: true do |f| %>
        <span><%= f.label :name, "ジャンル名" %></span>
        <%= f.text_field :name, value: @genre.name %>
        <%=f.submit "変更を保存", class:"btn btn-success py-1" %>
      <% end %>
    </div>
  </div>
