<h1>新規投稿</h1>

 <%= form_with model: @item, url:'/admins/items' do |f| %>
  <table>
   <tr><th>商品名</th>
 　 <td><%= f.text_field :name, placeholder:"商品名" %></td>
　 </tr>
　 
   <tr><th>本文</th>
    <td><%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %></td>
　 </tr>
　 
   <tr><th>税抜価格</th>
    <td><%= f.text_field :price, placeholder:"1000" %>円</td>
　 
　  <tr><th>販売ステータス</th>
　   <td><%= f.radio_button :is_active, true, checked: true %>
     <%= f.label :is_active, "販売中" %>
     <%= f.radio_button :is_active, false %>
     <%= f.label :is_active, "販売停止中" %></td></th></tr>
　  
  <tr><th><%= f.submit '投稿', class:"btn btn-success" %></td></th></tr>
 <% end %>
</table>