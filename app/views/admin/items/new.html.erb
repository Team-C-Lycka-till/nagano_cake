<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
    <h4>
      <span class=" p-2" style="background-color: #eee;">商品新規登録</span>
    </h4>
    </div>
  </div>
    <div class="row">
    <div class="col-sm-12 px-sm-0 mx-auto mb-5">
 <%= form_with model: @item, url:"/admin/items" do |f| %>
  <table class="table table-borderless">

   <tr>
    <div class="form-group">
    <th><%= f.label :商品画像 %></th>
     <th><%= f.file_field :image, accept: "image/*" %></th>
      </div>
   </tr>

   <tr><th>商品名</th>
 　 <td><%= f.text_field :name, placeholder:"商品名" %></td>
　 </tr>

   <tr><th>本文</th>
    <td><%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %></td>
　 </tr>

　 <tr>
   <div class="form-group">
    <th><%= f.label :ジャンル %></th>
     <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></td>
     </div>
   </tr>

   <tr><th>税抜価格</th>
    <td><%= f.text_field :price, placeholder:"1000" %>円</td>

　  <tr><th>販売ステータス</th>
　   <td><%= f.radio_button :is_active, true, checked: true %>
     <%= f.label :is_active, "販売中" %>
     <%= f.radio_button :is_active, false %>
     <%= f.label :is_active, "販売停止中" %></td></th></tr>

  <tr><th><%= f.submit "新規登録", class:"btn btn-success" %></td></th></tr>
 <% end %>
</table>
    </div>
  </div>
 </div>