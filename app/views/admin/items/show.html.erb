
<div class='container my-5'>

  <div class='row mb-5 d-flex'>
    <h4>
      <span class=" p-2" style="background-color: #eee;">商品詳細</span>
    </h4>
        <div class="col-sx-12 col-lg-3 mt-4 ">
      <div class="text-center ">
 <%= image_tag @item.get_image(300,200) %>
      </div>
    </div>
    <div class="col-sx-12 col-md-12 col-lg-5 mt-6 ">
    <table class="table table-borderless">

      <tr><th>商品名</th>
      <td><p><%= @item.name %></p></td>
      </tr>
      <tr><th>商品説明</th></th>
      <td><p><%= simple_format(@item.introduction)%></p></td>
      </tr>
      <tr><th>ジャンル</th></th>
      <td><%= @item.genre.name %></td>
      <tr><th>税込価格<br>(税抜価格)</th></th>
      <td><h5> <%=@item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円</h5></td>
      <tr><th>販売ステータス</th></th>
      <td><%  if @item.is_active == true %>
        <p class="text-success">販売中</p>
      <% else %>
        <p class="text-secondary">販売停止中です</p></td>
      <% end %>
        <tr><td><%= link_to "編集する", edit_admin_item_path, class:"btn btn-success" %></td></tr>
      </table>
       </div>
    </div>
   </div>