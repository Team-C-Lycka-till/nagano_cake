<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
    <h4>
      <span class=" p-2" style="background-color: #eee;">商品一覧</span>
    </h4>
     </div>
    <div class="col-sm-2 px-sm-0 text-right mb-2">
      <%= link_to new_admin_item_path, class:"btn btn--circle btn--circle-c btn--shadow" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>

  <div class="col-sm-10 px-sm-0 mx-auto mb-5">
  <table class="table table-borderless">
    <thead>
     <tr class="table-secondary">
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      </tr>
      </thead>
<% @items.each do |item| %>
    <tbody>
     <tr>
      <td><%= item.id %></td>
       <td><%= link_to admin_item_path(item.id) do %>
        <u><%= item.name %></u>
         </td>
          <% end %>
      <td>¥<%= item.price.to_s(:delimited) %></td>
      <td><%= item.genre.name %></td>
      <td><% if item.is_active == true %>
       <p class="text-success font-weight-bold">販売中</p>
        <% else %>
       <p class="text-secondary font-weight-bold">販売停止中</p>
        <% end %>
       </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  </div>
  </div>
  </div>
