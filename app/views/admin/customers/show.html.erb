<div class="container">
  <div class="row-8">
    <div class="col">
      <h5 class="my-5">
        <span class ="p-2" style="background-color: #eee;">
          <%= @customer.full_name %>さんの会員詳細
        </span>
      </h5>
      <div class="d-flex align-items-center">
        <table class="table table-borderless">
          <tr>
            <th>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</td>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>

          <tr>
            <th>フリガナ</th>
            <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>

          <tr>
            <th>会員ステータス</th>
            <td class ="text-left">
              <% if @customer.is_active %>
                <span class = "text-success">有効</span>
              <% else %>
                <span class = "text-secondary">退会</span>
              <% end %>
            </th>
          </tr>

          <tr>
            <td></td>
            <td>
              <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>
            </td>
            <td>
              <%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-primary" %>
            </td>
          </tr>

        </table>
      </div>
    </div>
  </div>
</div>
