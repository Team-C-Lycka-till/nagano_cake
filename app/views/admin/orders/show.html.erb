<div class ="container">

  <div class ="row">
    <h5 class="my-5">
      <span class ="p-2" style="background-color: #eee;">
        注文履歴詳細
      </span>
    </h5>
  </div>

  <div class ="row">
     <div class="col-6">
      <%# @order_datils.each do |order_datil| %>
        <table class="table table-borderless">
          <tr>
            <td>購入者</td>
            <td><%= @order.name %></td>
          </tr>

          <tr>
            <td>注文日</td>
            <td><%= @order.set_date %></td>
          </tr>

          <tr>
            <td>配送先</td>
            <td>
              <%= @order.postal_code %><%= @order.address %><br>
              <%= @order.name%>
            </td>
          </tr>

          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method %></td>
            <td></td>
          </tr>
          <%= form_with model:@order, url: admin_order_path(@order), method: :patch do |f| %>
            <tr>
              <td>注文ステータス</td>
              <td>
                <%= f.select :status,Order.statuses.keys.map %>
                <%= f.submit "更新", class: "btn btn-success ml-5" %>
              </td>
            </tr>
          <% end %>

        </table>
      <%# end %>
    </div>
     </div>

    <div class ="row">
      <div class ="col-9">
        <table class="table table-border pt-8">
          <thead>
            <tr class ="p-2" style="background-color: #eee;">
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |item| %>
              <tr>
                <td>
                  <%#商品の名前 %>
                  <%= link_to item.item.name %>
                </td>
                <td>
                  <%# 単価(税込) %>
                  <%= item.price %>円
                </td>
                <td>
                  <%# 数量 %>
                  <%= item.amount %>
                </td>
                <td>
                  <%# 小計 %>
                  <%= item.total_item%>
                </td>
                <%= form_with model: item, url: admin_order_detail_path(item.id), method: :patch do |f| %>
                  <td>
                    <%= f.select :making_status,OrderDatil.making_statuses.keys.map %>
                    <%= f.submit "更新", class: "btn btn-success ml-3" %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class ="col-3 row d-flex align-items-end ">

          <table>
            <tr>
              <td>商品合計</td>
              <td><%= @order.total_item_amount.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <td>送料</td>
              <td><%= @order.shipping_cost.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <td>請求金額合計</td>
              <td><strong><%= @order.total_payment.to_s(:delimited) %>円</strong></td>
            </tr>
          </table>
      </div>


  </div>
</div>